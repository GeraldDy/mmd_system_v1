#modal-new.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h3.modal-title
          Create Job Levels
      .modal-body
        .modal-body-content
          .row
            .col
              .form-group
                %label
                  Name
                %input#job-level-name.form-control
          .row
            .col
              .form-group
                %label
                  Select Area:
                = select_tag :select_kso, options_for_select(@kso_settings.collect{ |u| [u[:name].upcase,u[:id]] }), id: "select-kso", class: "form-control" , prompt: "-- SELECT --"
      .modal-footer
        .controls
          %button#btn-save.btn.btn-primary
            .fa.fa-check
            Save
          %button.btn{"data-bs-dismiss" => "modal", :type => "button"}
            .fa.fa-times
            Cancel
