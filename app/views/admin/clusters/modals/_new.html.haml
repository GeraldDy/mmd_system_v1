#modal-new.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h3.modal-title
          Create Cluster
      .modal-body
        .modal-body-content
          .row
            .col
              .form-group
                %label
                  Cluster Name
                %input#cluster-name.form-control
          .row
            .col
              .form-group
                %label
                  Cluster Shortname
                %input#cluster-shortname.form-control
          .row
            .col
              .form-group
                %label
                  Select Area:
                = select_tag :area, options_for_select(@area.collect{ |u| [u[:name].upcase,u[:id]] }), id: "select-area", class: "form-control" , prompt: "-- SELECT --"
      .modal-footer
        .controls
          %button#btn-save.btn.btn-primary
            .fa.fa-check
            Save
          %button.btn{"data-bs-dismiss" => "modal", :type => "button"}
            .fa.fa-times
            Cancel
