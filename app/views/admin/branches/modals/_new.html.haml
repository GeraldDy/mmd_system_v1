#modal-new.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h3.modal-title
          Create Branch
      .modal-body
        .modal-body-content
          .row
            .col
              .form-group
                %label
                  Branch Name
                %input#branch-name.form-control
          .row
            .col
              .form-group
                %label
                  Branch Shortname
                %input#branch-shortname.form-control
          .row
            .col
              .form-group
                %label
                  Select Cluster:
                = select_tag :clusters, options_for_select(@clusters.collect{ |u| [u[:name].upcase,u[:id]] }), id: "select-cluster", class: "form-control" , prompt: "-- SELECT --"
      .modal-footer
        .controls
          %button#btn-save.btn.btn-primary
            .fa.fa-check
            Save
          %button.btn{"data-bs-dismiss" => "modal", :type => "button"}
            .fa.fa-times
            Cancel
